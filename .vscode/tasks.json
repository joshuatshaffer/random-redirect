{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format Nim file",
      "command": "nimpretty",
      "args": ["${file}"],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
